<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_menu_header"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <!--<ImageView-->
                <!--android:id="@+id/userheader"-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="60dp"-->
                <!--android:background="@drawable/ic_account_circle_white_24dp" />-->
            <krelve.app.Easy.activity.CircleImg
                android:id="@+id/userheader"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default2" />


            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="请登录"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_weight="2.50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sentence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="春路雨添花,花动一山春色。"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_menu_index_background"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:text="发现"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />



    <TextView
        android:id="@+id/tv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_menu_index_background"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:text="首页"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_menu_index_background"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:text="资讯"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/choose_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_menu_index_background"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:text="选课"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/subject_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_menu_index_background"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:text="课表"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/grades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_menu_index_background"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:text="成绩"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/consumption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_menu_index_background"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:text="消费"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/school_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_menu_index_background"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:text="充值"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_menu_index_background"
        />

    <!--<ListView-->
        <!--android:id="@+id/lv_item"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@android:color/white"-->
        <!--android:divider="@android:color/transparent"-->
        <!--android:scrollbars="none">-->

    <!--</ListView>-->

</LinearLayout>